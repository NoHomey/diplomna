#ifndef _Shot_H
#define _Shot_H
#include "driver.hh"
#include "libhelp.hh"
class Shot {
public:
Shot(const int& x, const int& y, const int& dx, const int& dy);
void turn(Adafruit_TLC5947& d) {
  d.setLED(convert(x_, y_), 0, 0, 0);
  set((x_ += dx_), (y += dy_)); 
  d.setLED(convert(x_, y_), 4100, 0, 0);
}
private:
int x_, y_, dx_, dy_;
};
#endif
